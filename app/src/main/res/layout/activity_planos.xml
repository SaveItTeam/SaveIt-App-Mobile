<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Branco">

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/onda_verde_escuraeclara_nove" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/plus_jakarta_sans_extralight"
        android:text="Plano"
        android:textColor="@color/PretoNaoPuro"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutAvancado"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/plano_avancado_border"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView30">

        <TextView
            android:id="@+id/textViewAvancadoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_horizontal"
            android:fontFamily="@font/plus_jakarta_sans_extralight"
            android:text="SaveIt Pro"
            android:textColor="@color/BrancoNaoPuro"
            android:textSize="30sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Itens do plano -->
            <ImageView
                android:id="@+id/imageViewAvancado1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_check" />

            <TextView
                android:id="@+id/textViewAvancado1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inclusive_sans"
                android:text="Gerenciador de estoque"
                android:textColor="@color/BrancoNaoPuro"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageViewAvancado1"
                app:layout_constraintTop_toTopOf="@id/imageViewAvancado1" />

            <ImageView
                android:id="@+id/imageViewAvancado2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/imageViewAvancado1"
                app:srcCompat="@drawable/icon_check" />

            <TextView
                android:id="@+id/textViewAvancado2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inclusive_sans"
                android:text="Relatórios mensais"
                android:textColor="@color/BrancoNaoPuro"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageViewAvancado2"
                app:layout_constraintTop_toTopOf="@id/imageViewAvancado2" />

            <ImageView
                android:id="@+id/imageViewAvancado3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/imageViewAvancado2"
                app:srcCompat="@drawable/icon_check" />

            <ImageView
                android:id="@+id/imageViewAvancado4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewAvancado3"
                app:srcCompat="@drawable/icon_check" />

            <TextView
                android:id="@+id/textViewAvancado3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inclusive_sans"
                android:text="Anúncios em nossa vitrine"
                android:textColor="@color/BrancoNaoPuro"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageViewAvancado3"
                app:layout_constraintTop_toTopOf="@id/imageViewAvancado3" />

            <TextView
                android:id="@+id/textViewAvancado4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inclusive_sans"
                android:text="Anúncios em nossa vitrine"
                android:textColor="@color/BrancoNaoPuro"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewAvancado4"
                app:layout_constraintTop_toTopOf="@+id/imageViewAvancado4" />

            <TextView
                android:id="@+id/textViewAvancadoPreco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:fontFamily="@font/inclusive_sans"
                android:text="R$ 949,99"
                android:textColor="@color/BrancoNaoPuro"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewAvancado3" />

            <TextView
                android:id="@+id/textViewAvancadoMensal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inclusive_sans"
                android:text="mensal"
                android:textColor="@color/BrancoNaoPuro"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/textViewAvancadoPreco"
                app:layout_constraintStart_toEndOf="@id/textViewAvancadoPreco" />

            <Button
                android:id="@+id/btComprar"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="240dp"
                android:background="@drawable/bt_filtro_estilizacao"
                android:fontFamily="@font/inclusive_sans"
                android:text="Assinar"
                android:textAllCaps="false"
                android:textColor="@color/BrancoNaoPuro"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewAvancado3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>