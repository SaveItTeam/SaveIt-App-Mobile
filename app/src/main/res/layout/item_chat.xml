<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14sp"
    app:cardBackgroundColor="@color/Cinza"
    app:cardCornerRadius="32dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemConversa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Imagem da empresa -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgCardEmpresa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Ícone de perfil"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
            tools:src="@tools:sample/avatars" />

        <!-- Nome da empresa -->
        <TextView
            android:id="@+id/nomeEmpresaCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inclusive_sans"
            android:text="Camil"
            android:textColor="@color/PretoNaoPuro"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgCardEmpresa"
            app:layout_constraintTop_toTopOf="@id/imgCardEmpresa" />

        <!-- Última mensagem -->
        <TextView
            android:id="@+id/ultimaMsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inclusive_sans"
            android:text="Bla bla bla"
            android:textColor="@color/PretoNaoPuro"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/imgCardEmpresa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgCardEmpresa"
            app:layout_constraintTop_toBottomOf="@id/nomeEmpresaCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
