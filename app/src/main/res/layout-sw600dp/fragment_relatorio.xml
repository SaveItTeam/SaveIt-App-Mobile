<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Branco"
    tools:context=".ui.relatorioMensal.Relatorio">

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="960dp"
        android:layout_height="340dp"
        android:src="@drawable/onda_verde_escuraeclara_sete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inclusive_sans"
        android:text="Relatório"
        android:textColor="@color/PretoNaoPuro"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.194" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="860dp"
        android:layout_height="98dp"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="@color/VerdeEscuro"
        app:cardCornerRadius="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView23">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/inclusive_sans"
                android:text="Mês"
                android:textColor="@color/BrancoNaoPuro"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="124dp"
                android:fontFamily="@font/inclusive_sans"
                android:text="Saída"
                android:textColor="@color/BrancoNaoPuro"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView43"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.511" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:fontFamily="@font/inclusive_sans"
                android:text="Entrada"
                android:textColor="@color/BrancoNaoPuro"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView42"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.511" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inclusive_sans"
                android:text="Perda"
                android:textColor="@color/BrancoNaoPuro"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.651"
                app:layout_constraintStart_toEndOf="@+id/textView44"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="856dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:stretchColumns="1,2,3,4">

                <!-- Janeiro -->
                <TableRow>

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Janeiro"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="000"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="000"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="000"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />
                </TableRow>

                <!-- Fevereiro -->
                <TableRow>

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Fevereiro"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="000"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="000"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="000"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />
                </TableRow>

                <!-- Março -->
                <TableRow>

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Março"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="000"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="000"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="000"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />
                </TableRow>

                <!-- Abril -->
                <TableRow>

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Abril"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="000"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="000"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />

                    <TextView
                        android:background="@drawable/borda_cell"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="000"
                        android:textColor="@color/PretoNaoPuro"
                        android:textSize="34sp" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
